<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_result_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="게임 종료"
            android:textColor="#000000"
            android:textSize="36sp" />
        <!-- 게임 결과 텍스트 뷰 -->
        <TextView
            android:id="@+id/result_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="게임 점수: 1000점"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- 유저 이름 텍스트 뷰 -->
        <TextView
            android:id="@+id/result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:gravity="center"
            android:text="유저 이름: "
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- 랭킹 등수 텍스트 뷰 -->
        <TextView
            android:id="@+id/result_high_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="최고 점수 : 2000점"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- 나가기 버튼 -->
            <Button
                android:id="@+id/game_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:background="@drawable/green_round"
                android:text="나가기" />

            <!-- 랭킹보기 버튼 -->
            <Button
                android:id="@+id/game_rank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@drawable/orange_round"
                android:text="순위보기" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
