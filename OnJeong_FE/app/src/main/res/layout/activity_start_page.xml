<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".domain.login.activity.StartActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/main_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <TextView-->
<!--        android:id="@+id/textView5"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->

<!--        android:text="온라인에서\n가족, 지인들과\n情을 나눠요"-->
<!--        android:textSize="26dp"-->
<!--        app:layout_constraintBottom_toTopOf="@id/buttonStart"-->
<!--        app:layout_constraintStart_toStartOf="@id/buttonStart"-->
<!--        app:layout_constraintEnd_toEndOf="@id/buttonStart"-->
<!--        android:layout_marginStart="50dp"-->
<!--        android:layout_marginEnd="50dp"-->
<!--        android:layout_marginBottom="30dp"/>-->

    <TextView
        android:id="@+id/text1"
        style="@style/very_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온"
        app:layout_constraintBottom_toTopOf="@id/buttonStart"
android:layout_marginBottom="80dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="@id/buttonStart" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라인에서"
        style="@style/regular"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가족, 지인들과"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="@id/text1"
        style="@style/regular"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text3"
        style="@style/very_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정"
        app:layout_constraintBottom_toTopOf="@id/buttonStart"
        app:layout_constraintEnd_toEndOf="@id/buttonStart"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/regular"
        android:text="을"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/text3"
        app:layout_constraintBottom_toBottomOf="@id/text3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나눠요"
        style="@style/regular"
        app:layout_constraintStart_toStartOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:background="@drawable/rect_round_main_color_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/regular"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="140dp"

        />




</androidx.constraintlayout.widget.ConstraintLayout>