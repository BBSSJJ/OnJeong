<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    android:orientation="vertical">

    <include layout="@layout/activity_main_bar" />

    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="280dp">

        <View
            android:id="@+id/ViewColorYellow"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:background="#F6BD4E" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/white" />

    </FrameLayout>

    <TextView
        android:id="@+id/name"
        style="@style/large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="" />


    <Button
        android:id="@+id/phoneNumEditBtn"
        style="@style/regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/rect_round_main_color_button"
        android:backgroundTint="@color/white"
        android:text="번호 수정"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/groupSettingBtn"
        style="@style/regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/rect_round_main_color_button"
        android:backgroundTint="@color/white"
        android:text="모임 설정"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/phoneBookBtn"
        style="@style/regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/rect_round_main_color_button"
        android:backgroundTint="@color/white"
        android:text="연락처 동기화"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/logoutBtn"
        style="@style/regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rect_round_main_color_button"
        android:backgroundTint="@color/light_accent"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>
